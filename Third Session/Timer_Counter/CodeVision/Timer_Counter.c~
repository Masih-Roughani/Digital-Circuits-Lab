#include <mega16.h> 
#include <stdio.h>
#include <alcd.h>
int tenth=0,Sec=0,Min=0,Hour=0;
interrupt [TIM0_COMP] void timer0_comp_isr(void)
{
    char st[20];
    tenth++;
    if (tenth == 10){Sec++; tenth = 0;}
    if (Sec == 60){Min++; Sec=0;}
    if (Min == 60){Hour++; Min=0;}
    if (Hour == 24){Hour =0;}  
    sprintf(st,"%d : %d : %d",Hour,Min,Sec);
    lcd_gotoxy(0,0);
    lcd_puts(st);
}

